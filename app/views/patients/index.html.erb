<p style="color: green"><%= notice %></p>

<% if model_signed_in? %>
  <h1>Hello welcome to the patient checking page.</h1>
  <h1>Patients</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Diseases</th>
      <th>Admission Date</th>
      <th>Recovery Time (in Months)</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
     <% if patient.model == current_model %>
<tr>
  <td><%= link_to "#{patient.first_name} #{patient.last_name}", patient %></td>
  <td><%= patient.email %></td>
  <td><%= patient.phone %></td>
  <td><%= patient.diseases %></td>
  <td><%= patient.date_of_admittance %></td>
  <td><%= patient.time_required_for_recovery %></td>
  <td><%= link_to 'Delete', patient, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
  <td><%= link_to 'Edit', edit_patient_path(patient), class: "btn btn-outline-primary btn-sm" %></td>
</tr>

      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New patient', new_patient_path, class: "btn btn-secondary" %>

<% else %>
  <p>Please <%= link_to 'sign up', new_model_registration_path %> or <%= link_to 'log in', new_model_session_path %> to view/edit the patients list.</p>
<% end %>
